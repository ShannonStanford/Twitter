<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetDetails">

    <TextView
        android:id="@+id/tvTweetText"
        android:layout_width="384dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTweetText"
        android:layout_toEndOf="@+id/btRetweet"
        android:text="Reply"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/btRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTweetText"
        android:text="Retweet"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/btLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTweetText"
        android:layout_toEndOf="@+id/btReply"
        android:text="Like"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="168dp" />
</RelativeLayout>