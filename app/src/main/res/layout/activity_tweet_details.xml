<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetDetails">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvTweetText"
        android:layout_width="349dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_marginTop="104dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="TextView"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btReply"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/btRetweet"
        android:layout_marginStart="147dp"
        android:background="@drawable/ic_vector_messages_stroke"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/btRetweet"
        android:layout_width="36dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_marginBottom="199dp"
        android:background="@drawable/respond"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/btLike"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btReply"
        android:layout_marginEnd="74dp"
        android:background="@drawable/ic_heart_twitter"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btReply"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_marginEnd="-101dp"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>